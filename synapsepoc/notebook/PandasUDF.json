				"source": [
					"# Declare the function and create the UDF\r\n",
					"def multiply_func(a: pd.Series, b: pd.Series) -> pd.Series:\r\n",
					"    return a * b\r\n",
					"\r\n",
					"multiply = pandas_udf(multiply_func, returnType=LongType())"
				],
				"execution_count": 2
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"# The function for a pandas_udf should be able to execute with local pandas data\r\n",
					"x = pd.Series([1, 2, 3])\r\n",
					"print(multiply_func(x, x))"
				],
				"execution_count": 3
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"# Create a Spark DataFrame, 'spark' is an existing SparkSession\r\n",
					"df = spark.createDataFrame(pd.DataFrame(x, columns=[\"x\"]))"
				],
				"execution_count": 4
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"# Execute function as a Spark vectorized UDF\r\n",
					"df.select(multiply(col(\"x\"), col(\"x\"))).show()"
				],
